	\addcontentsline{toc}{part}{ \Roman{blockCounter} $#1$ }

	\cleardoublepage{}
	\vspace*{\fill}
	\begin{center}
	{
		\bf \Huge{ Block \Roman{blockCounter} } 
	}
	\end{center}
	\vspace*{1cm}
	\begin{center}
	{
		\bf \Huge{ $#1$ } 
	}
	\end{center}
	\vspace*{\fill}
}


\newcommand{\unit}[1]
{
	\addtocounter{unitCounter}{1}

	\renewcommand{\unitName}{ $#1$ }
