	{
		\fbox{{ \bf \arabic{unitCounter}. $#1$ }}
	}
	\end{center}

	\setlength{\baselineskip}{24pt} % blank space
	\endlinechar=-1\relax			% ignore breaks
	\setlength{\parindent}{0cm} 	% no paragraph indentation
}



