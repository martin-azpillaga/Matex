\newcommand{\laboratory}[1]
{
	\addtocounter{unitCounter}{1}

	\renewcommand{\unitName}{ Martin Azpillaga Aldalur }
	\renewcommand{\blockName}{ Laboratory }
	\addcontentsline{toc}{chapter}{ $#1$ }

	\begin{center}
	{
		\fbox{ {\bf\Roman{unitCounter}. $#1$} }
	}
	\end{center}

	\setlength{\baselineskip}{24pt} % blank space
	\endlinechar=-1\relax			% ignore breaks
	\setlength{\parindent}{0cm} 	% no paragraph indentation
}


\newcommand{\introduction}[1]
{ 
	$#1$

	\cleardoublepage
}



