% Variables


\def \entryMark{\hbox{}}
\def \tabSpace {20}

\newcounter{indentation}



% Non lexicographical order writing modes

\DeclareDocumentCommand{\tab}{ m >{\SplitList{.}} m O{\hbox{}} }
{
	\def \entryMark { #3 }
	#1:
	\addtocounter{indentation}{ \tabSpace }
	\ProcessList{#2}{\entry}
	\addtocounter{indentation}{ -\tabSpace }
	\\
}


