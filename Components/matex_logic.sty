% Big operators 

\DeclareDocumentCommand{\union}{ s m m o o }
{
	\IfBooleanTF{#1}
	{
		\displaystyle\bigcup_{#3} #2
	}{
		\IfValueTF {#4}
		{ 
			\IfValueTF {#5}
			{
				\displaystyle\bigcup_{ #3 = #4 }^{ #5 } \; #2
			}{
				\displaystyle\bigcup_{ #3 \geq #4 } \; #2
			} 
		}{
			\displaystyle\bigcup_{ #3 \in \uppercase{ #3 } } \; #2
		}
	}
}


